<div>
  <h2>Item #{{id}}</h2>
  <table>
    <tr>
      <th>Condition</th>
      <td>{{condition}}</td>
    </tr>
    <tr>
      <th>Category</th>
      <td>{{category}}</td>
    </tr>
    <tr>
      <th>Subcategory</th>
      <td>{{subcategory}}</td>
    </tr>
    <tr>
      <th>Item</th>
      <td>{{item}}</td>
    </tr>
    <tr>
      <th>Size</th>
      <td>{{size}}</td>
    </tr>
    <tr>
      <th>Brand</th>
      <td>{{brand}}</td>
    </tr>
  </table> 
</div>

